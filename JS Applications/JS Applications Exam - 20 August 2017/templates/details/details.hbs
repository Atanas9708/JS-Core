<div class="post">
    <div class="col thumbnail">
        <a href="{{url}}">
            <img src="{{imageUrl}}">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a href="{{url}}">
                {{title}}
            </a>
        </div>
        <div class="details">
            <p>{{description}}</p>
            <div class="info">
                submitted {{time}} ago by {{author}}
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>